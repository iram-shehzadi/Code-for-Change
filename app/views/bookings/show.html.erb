
<!-- banner -->

<div class="banner-project" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @project.photo.key %>);">
  <div class="your-project">
    <div class="booking-info">
	     <h5>You are working on..</h5>
			 <h4><%= @project.name %></h4>


					<div class="all-info-download">
             <div class="info-download">
							<% if @project.file.attached? %>
							   <i class="fas fa-arrow-circle-down icon-dashboard"></i>
                 <%= link_to "Project brief", rails_blob_path(@project.file, disposition: 'attachment') %>
							 <% end %>
						  </div>

            <div class="info-download">
              <i class="fab fa-github icon-dashboard"></i>
              Github
            </div>
				  </div>
		</div>
	</div>
</div>



<!--- Trello --->

<div class="container">
	<div class="section-seperator">
		<% unless @boards.nil? %>
			<div class="sm-table trello-updates">
				<h3 style="font-family: 'Oswald', sans-serif; text-align:center; font-size:44px; padding-bottom: 28px;">TRELLO UPDATES</h3>
				<div class="lists">
					<% @boards.each do |list| %>
					<div class="list">
					<div class="d-flex align-items-center justify-content-center black-bg">
						<h5 class="trello-header"><%= list["name"].upcase %></h5>
						<div class="card-count d-flex align-items-center justify-content-center"><%= list["cards"].length %></div>
					</div>
					<ul>
						<% list["cards"].each do |entry|  %>
							<li><%= entry["name"] %></li>
						<% end %>
					</ul>
					</div>
						<% end %>
				</div>
			</div>
		<% end %>
	</end>



  <!--collaborators-->

	<div class="section-seperator">
		<div class="sm-table collabs">
			<h3 style="font-family: 'Oswald', sans-serif; text-align:center; font-size: 44px; padding-top: 28px; ">COLLABORATORS</h3>
			  <div class="collabs-all">
					<% @collaborators.each do |collaborator| %>
						<div class="each-collab">
							<div class="collab-name">
								<p><%= collaborator.name %></p>
							 </div>
							 <div class="collab-profile">
								<% if collaborator.photo.attached? %>
								<%= link_to collaborator.linkedin_url, target: '_blank' do %>
								<%= cl_image_tag collaborator.photo.key, class: 'user-photo round-avatar' %>
								<% end %>
								 <% else %>
									<%= link_to collaborator.linkedin_url, target: '_blank' do %>
										<%= image_tag 'default-avatar.jpg', class: 'user-photo round-avatar' %>
									<% end %>
								<% end %>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

