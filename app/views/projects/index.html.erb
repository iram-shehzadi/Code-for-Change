<div class="container">
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search Projects
      </button>
    </div>
<input type="checkbox" class="tablefilter" name="class1" id="class1" checked />
<label for="class1">Filter 1</label>
<input type="checkbox" class="tablefilter" name="class2" id="class2" checked />
<label for="class2">Filter 2</label>
<input type="checkbox" class="tablefilter" name="class3" id="class3" checked />
<label for="class3">Filter 3</label>
  <% end %>

  <div class="container">
    <ul class="list-group">
      <% @projects.each do |project| %>
        <li class="list-group-item">
          <%= link_to project_path(project), class: 'card-link' do %>
            <div class="card-product" >
              <img <%= cl_image_tag project.photo.key %>
              <div class="card-product-infos">
                <h2><%= project.name %></h2>
                <p>Category: <%=project.category %> Location: <%= project.location %></p>
                <p>Project description: <%= project.project_description %> </p>
              </div>
            </div>
          <% end %>
        </li>
    <% end %>
  </div>
</div>

