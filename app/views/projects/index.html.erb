<div class="container">
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search Projects
      </button>
    </div>
<input type="checkbox" class="tablefilter" name="class1" id="class1" checked />
<label for="class1">Filter 1</label>
<input type="checkbox" class="tablefilter" name="class2" id="class2" checked />
<label for="class2">Filter 2</label>
<input type="checkbox" class="tablefilter" name="class3" id="class3" checked />
<label for="class3">Filter 3</label>
  <% end %>
  <div class="card-container">
    <div class="row">
      <% @projects.each do |project| %>
        <div class="col-12 col-md-6 col-lg-4">
          <%= link_to project_path(project), class: 'card-link' do %>
            <div class="card">
              <%= cl_image_tag project.photo.key, class: "card-img" %>
                <div class="card-description">
                  <div class="card-title">
                    <p class="left-align">Project: <%= project.name %>
                      Category: <%= project.category %> Charity Desc: <%= project.charity_description %></p>
                    <p class="right-align">Deadline date: <%= project.deadline %></p>
                  </div>
                  <div class="card-information">
                    <%= project.project_description %>
                  </div>
                </div>
              <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

